<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressHUD">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateVisible|adjustResize</item>
    </style>
    <style name="RateThisAppButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RateThisAppDialogStarsLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="RateThisAppEmptySpace">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="RateThisAppTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="bigBlackText">
        <item name="android:textSize">@dimen/style_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/big_black_text</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
    </style>
    <style name="bigBlackTextWithShadow">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="bigWhiteText">
        <item name="android:textSize">@dimen/style_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="bigWhiteTextWithShadow">
        <item name="android:textSize">@dimen/style_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="bigWhiteTextWithShadowClickable">
        <item name="android:textColor">@color/white_button_text</item>
    </style>

    <style name="blackTextBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="blackTextClickable">
        <item name="android:textColor">@color/big_black_text</item>
    </style>
    <style name="blackTextWithShadow">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="mediumBlackTextWithShadow">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="mediumWhiteTextWithShadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="mediumWhiteTextWithShadowBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="splashScreenTipStyle">
        <item name="android:textSize">@dimen/style_big_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="tooltip_bubble_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.25</item>
    </style>
    <style name="whiteTextClickable">
        <item name="android:textColor">@color/white_button_text</item>
    </style>
    <style name="whiteTextWithShadow">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="whiteTextWithShadowClickable">
        <item name="android:textColor">@color/white_button_text</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogAnimationUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="TransAlertDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item><!-- 内容区域背景透明 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 背景不模糊 -->
    </style>

    <style name="topAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>
    <style name="bottomAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>

    <!-- Application Themes -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>

        <item name="toolbarForeground">@color/white</item>
        <item name="toolbarBackground">@color/myPrimaryColor</item>
    </style>

    <style name="AppTheme.BaseLight" parent="AppTheme">
        <item name="colorPrimaryDark">@color/grey_dark</item>

        <item name="toolbarForeground">@color/black</item>
        <item name="toolbarBackground">@color/white</item>
    </style>


    <!-- Public Application Themes -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppTheme.Light" parent="AppTheme.BaseLight">
    </style>

    <style name="AppTheme.Launcher" parent="BaseAppTheme">
        <item name="colorPrimaryDark">@color/grey_light</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?toolbarForeground</item><!-- Changed -->
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:theme">@style/Toolbar</item>
        <item name="android:background">?toolbarBackground</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?toolbarForeground</item><!-- Changed -->
        <item name="android:textColorSecondary">?toolbarForeground</item><!-- Changed -->
        <item name="titleTextAppearance">@style/Toolbar_Title</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">@color/extra_light_gray</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Toolbar_Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Clean Usage of listTitle -->
    <style name="listTitleStyle">
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="listStyleNoPadding">
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>


</resources>
